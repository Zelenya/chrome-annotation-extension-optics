{
  "manifest_version": 3,
  "name": "Named Optic Operators",
  "version": "1.0",
  "description": "Annotate optic operators with their names",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_title": "Click to annotate operators on this page!"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ]
}
